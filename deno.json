{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite --port=3005",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.173.0/http/file_server.ts dist/",
    "update": "deno run --allow-read=./ --allow-net --allow-write=./ https://deno.land/x/deno_outdated@0.2.4/cli.ts --ignore node_modules/"
  }
}